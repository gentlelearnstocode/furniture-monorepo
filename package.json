{
  "name": "furniture-monorepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:push": "dotenv -e apps/web/.env.development.local -- pnpm --filter @repo/database drizzle-kit push",
    "db:generate": "pnpm --filter @repo/database drizzle-kit generate",
    "dev:web": "pnpm --filter web dev",
    "dev:admin": "pnpm --filter admin dev",
    "start": "turbo run start",
    "prod": "pnpm build && pnpm start",
    "start:web": "pnpm --filter web start",
    "start:admin": "pnpm --filter admin start"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
